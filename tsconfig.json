{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./resources/js/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "exclude": ["node_modules"],
  "include": ["resources/js/**/*"]
}
